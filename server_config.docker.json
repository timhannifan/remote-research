{
    "mcpServers": {
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "./output"
            ]
        },

        "research": {
            "sse_url": "http://research-server:10000/sse"
        },
        
        "fetch": {
            "command": "/usr/local/bin/uv",
            "args": ["tool", "run", "mcp-server-fetch"]
        },

        "markdownify": {
            "command": "node",
            "args": [
                "/opt/markdownify-mcp/dist/index.js"
            ]
        }
    }
}